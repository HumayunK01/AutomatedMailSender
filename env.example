# Email Configuration
SENDER_EMAIL=programmersclub@mhssce.ac.in
SENDER_PASSWORD=your_gmail_app_password_here
EVENT_NAME=your_event_name

# Timing Configuration (in seconds)
DELAY_BETWEEN_EMAILS=30
DELAY_BETWEEN_GROUPS=60

# Email Settings
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=465

# Event Statistics (displayed in organizer emails)
TOTAL_PARTICIPANTS=30
PROBLEMS_SOLVED=23
COMPLETION_RATE=80%

# Data File Paths (REQUIRED - must specify your data files)
WINNERS_DATA_FILE=data/winners.csv
PARTICIPANTS_DATA_FILE=data/participants.csv
ORGANIZERS_DATA_FILE=data/organizers.json

# Certificate Configuration
CERTIFICATE_BASE_PATH=certificates
WINNERS_CERT_FOLDER=winners
PARTICIPANTS_CERT_FOLDER=participants
ORGANIZERS_CERT_FOLDER=organizers

# Organization Branding
ORGANIZATION_NAME=Programmers Club
ORGANIZATION_TAGLINE=Making coding accessible to everyone
COPYRIGHT_YEAR=2025

# Batch Processing Options
MAX_BATCH_SIZE=100
RETRY_FAILED_EMAILS=true
MAX_RETRIES=3

# Debug and Testing Settings
DEBUG_MODE=false
DRY_RUN_MODE=false
